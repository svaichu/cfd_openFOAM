FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.70711 0.70711 0);

boundaryField
{
    left
    {
        type            fixedValue;
        value           $internalField;
    }

    right
    {
        type            zeroGradient;
    }

    down
    {
        type            fixedValue;
        value           $internalField;
    }

    up
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}

